@model Student

@{
	ViewData["Title"] ="Delete Student";
}

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Student</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row">
			<input asp-for="Id" hidden />
			<div class="border p-3 mt-4">
				<div class="form-floating py-2 col-12">
					<input asp-for="FirstName" disabled class="form-control border-0 shadow" />
					<label asp-for="FirstName" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="LastName" disabled class="form-control border-0 shadow" />
					<label asp-for="LastName" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Class" disabled class="form-control border-0 shadow" />
					<label asp-for="Class" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="StudentNumber" disabled class="form-control border-0 shadow" />
					<label asp-for="StudentNumber" class="ms-2"></label>
				</div>
				<div class="row mt-3">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger form-control">Delete</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Course" asp-action="Index" class="btn btn-outline-secondary form-control">
							Back
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>